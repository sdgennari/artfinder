<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="button_base">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="card_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:paddingLeft">@dimen/shadow_padding</item>
        <item name="android:paddingRight">@dimen/shadow_padding</item>
        <item name="android:paddingTop">@dimen/shadow_padding</item>
        <item name="android:paddingBottom">@dimen/shadow_padding_bottom</item>
        <item name="android:background">@drawable/card_bg_white</item>
    </style>

    <style name="card_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_hint</item>
    </style>

    <style name="card_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_button_height</item>
        <item name="android:textSize">@dimen/text_body_title</item>
        <item name="android:background">@drawable/li_item_bg</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="card_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_header_height</item>
        <item name="android:paddingLeft">@dimen/padding_card</item>
        <item name="android:paddingRight">@dimen/padding_card</item>
        <item name="android:paddingTop">@dimen/padding_text</item>
        <item name="android:paddingBottom">@dimen/padding_text</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="card_subheader_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_card</item>
        <item name="android:paddingRight">@dimen/padding_card</item>
        <item name="android:paddingTop">@dimen/padding_text</item>
        <item name="android:paddingBottom">@dimen/padding_text</item>
        <item name="android:textSize">@dimen/text_body_title</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="card_body_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_card</item>
        <item name="android:paddingRight">@dimen/padding_card</item>
        <item name="android:paddingBottom">@dimen/padding_text</item>
        <item name="android:textSize">@dimen/text_body_content</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>
