<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <TextView
        style="@style/error_title"
        android:id="@+id/error_title"
        android:layout_marginTop="@dimen/error_margin_top"
        android:layout_centerHorizontal="true"
        android:text="@string/error_no_events"/>

    <TextView
        style="@style/error_message"
        android:id="@+id/error_message"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/error_title"
        android:text="@string/error_check_connection"/>

</RelativeLayout>